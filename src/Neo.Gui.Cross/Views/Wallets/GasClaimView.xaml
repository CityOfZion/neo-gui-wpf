<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:walletsVm="clr-namespace:Neo.Gui.Cross.ViewModels.Wallets;assembly:Neo.Gui.Cross"
        xmlns:resources="clr-namespace:Neo.Gui.Cross.Resources;assembly:Neo.Gui.Cross"
        Icon="resm:Neo.Gui.Cross.Assets.logo.ico"
        Title="{x:Static resources:Strings.GasClaimTitle}"
        Width="300"
        SizeToContent="Height"
        CanResize="False">

  <Design.DataContext>
    <walletsVm:GasClaimViewModel/>
  </Design.DataContext>

  <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*,Auto" Margin="12">
    <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static resources:Strings.Available}" HorizontalAlignment="Right" />
    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AvailableGas}" HorizontalAlignment="Left" />

    <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static resources:Strings.Unavailable}" HorizontalAlignment="Right" />
    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding UnavailableGas}" HorizontalAlignment="Left" />

    <Button
        Grid.Row="2"
        Grid.Column="2"
        Content="{x:Static resources:Strings.ClaimAll}"
        IsEnabled="{Binding ClaimEnabled}"
        Padding="6 2"
        HorizontalAlignment="Right"
        Command="{Binding ClaimCommand}"/>
  </Grid>

</Window>