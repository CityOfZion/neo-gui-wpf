<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:developmentVm="clr-namespace:Neo.Gui.Cross.ViewModels.Development;assembly:Neo.Gui.Cross"
        xmlns:developmentViews="clr-namespace:Neo.Gui.Cross.Views.Development;assembly:Neo.Gui.Cross"
        xmlns:resources="clr-namespace:Neo.Gui.Cross.Resources;assembly:Neo.Gui.Cross"
        Icon="resm:Neo.Gui.Cross.Assets.logo.ico"
        Title="{x:Static resources:Strings.DeveloperToolsTitle}"
        Width="660"
        Height="480"
        CanResize="False">

  <Design.DataContext>
    <developmentVm:DeveloperToolsViewModel/>
  </Design.DataContext>

  <Grid>
    <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <!-- Transaction Builder Tab -->
      <TabItem Header="{x:Static resources:Strings.TxBuilder}">
        <developmentViews:TransactionBuilderView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
      </TabItem>

      <!-- Contract Parameters Tab -->
      <TabItem Header="{x:Static resources:Strings.ContractParameters}">
        <developmentViews:ContractParametersView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
      </TabItem>
    </TabControl>
  </Grid>

</Window>