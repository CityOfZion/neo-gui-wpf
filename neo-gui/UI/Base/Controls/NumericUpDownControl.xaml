<StackPanel x:Class="Neo.UI.Controls.NumericUpDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Orientation="Horizontal" x:Name="Container">
    <!-- TODO Disable controls if this control is disabled -->
    <TextBox x:Name="txtNum" x:FieldModifier="private" Margin="5,5,0,5" Width="50" Text="{Binding Value}" TextChanged="txtNumber_OnTextChanged" IsEnabled="{Binding IsChecked}" />
    <Button x:Name="cmdUp" x:FieldModifier="private" Margin="5,5,0,5" Content="˄" Width="20" Click="cmdUp_Click" IsEnabled="{Binding IsChecked}" />
    <Button x:Name="cmdDown" x:FieldModifier="private" Margin="0,5,0,5"  Content="˅" Width="20" Click="cmdDown_Click" IsEnabled="{Binding IsChecked}" />
</StackPanel>
