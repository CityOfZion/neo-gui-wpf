<controls:NeoWindow x:Class="Neo.UI.Views.Development.DeveloperToolsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Neo.UI.Controls"
             xmlns:development="clr-namespace:Neo.UI.Views.Development"
             Title="Neo Developer Tools" Width="660" Height="480" ResizeMode="NoResize">
    <Grid>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Transaction Builder Tab -->
            <TabItem Header="Tx Builder">
                <development:TransactionBuilderView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </TabItem>

            <!-- Contract Parameters Tab -->
            <TabItem Header="Contract Parameters">
                <development:ContractParametersView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </TabItem>
        </TabControl>
    </Grid>
</controls:NeoWindow>