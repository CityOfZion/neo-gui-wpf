<controls:NeoWindow x:Class="Neo.UI.Views.Voting.VotingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Neo.UI.Controls"
        xmlns:votingVm="clr-namespace:Neo.UI.ViewModels.Voting"
        Title="Voting" Width="600" Height="480" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <controls:NeoWindow.DataContext>
        <votingVm:VotingViewModel />
    </controls:NeoWindow.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{Binding Address}" HorizontalContentAlignment="Center" FontSize="16" Margin="0 4" VerticalAlignment="Center" />

        <GroupBox Grid.Row="1" Header="Candidates" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBox Text="{Binding Votes}" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" />
        </GroupBox>

        <DockPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0 8 0 0">
            <Button Content="OK" Width="60" Margin="0 0 8 0" Command="{Binding OkCommand}" />
            <Button Content="Cancel" Width="60" Command="{Binding CancelCommand}" />
        </DockPanel>
    </Grid>
</controls:NeoWindow>