<controls:NeoWindow x:Class="Neo.UI.Contracts.ParametersEditorView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:local="clr-namespace:Neo.UI.Contracts"
            xmlns:controls="clr-namespace:Neo.UI.Base.Controls"
            Title="Set Parameters"
            Width="700" Height="480"  ResizeMode="NoResize">
    <controls:NeoWindow.DataContext>
        <local:ParametersEditorViewModel />
    </controls:NeoWindow.DataContext>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Parameter List" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListView ItemsSource="{Binding Parameters}" SelectedItem="{Binding SelectedParameter}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="" DisplayMemberBinding="{Binding IndexStr}" />
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" />
                        <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <Grid Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="Current Value">
                <TextBox Text="{Binding CurrentValue, Mode=OneWay}" IsReadOnly="True" Background="#F0F0F0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
            </GroupBox>

            <GroupBox Grid.Row="1" Header="New Value">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" Text="{Binding NewValue, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding NewValueEnabled}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />

                    <DockPanel Grid.Row="1" HorizontalAlignment="Left" Margin="0 8 0 0">
                        <Button Content="+" Margin="0 0 8 0" Width="24"  Command="{Binding AddCommand}" IsEnabled="{Binding AddEnabled}" />
                        <Button Content="-" Width="24"  Command="{Binding RemoveCommand}" IsEnabled="{Binding RemoveEnabled}" /> 
                    </DockPanel>

                    <DockPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0 8 0 0">
                        <Button Content="Edit Array" Width="70" Margin="0 0 8 0" Command="{Binding EditArrayCommand}" IsEnabled="{Binding EditArrayEnabled}" />
                        <Button Content="Update" Width="70" Command="{Binding UpdateCommand}" IsEnabled="{Binding UpdateEnabled}" />
                    </DockPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</controls:NeoWindow>