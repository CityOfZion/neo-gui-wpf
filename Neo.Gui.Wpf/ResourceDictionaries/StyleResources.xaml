<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls">
    <!-- Default window style -->
    <Style x:Key="DefaultWindowStyle"  TargetType="mahapps:MetroWindow">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderColorBrush}" />
        <Setter Property="NonActiveWindowTitleBrush" Value="{DynamicResource AccentColorBrush2}" />
        <Setter Property="NonActiveBorderBrush" Value="{DynamicResource WindowBorderColor2Brush}" />
    </Style>
</ResourceDictionary>